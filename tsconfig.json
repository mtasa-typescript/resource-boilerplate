{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es6"],
        "module": "commonjs",
        "strict": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "[lua]",
        "types": ["lua-types/5.1"],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "tstl": {
        // MTASA Lua Language version is 5.1
        "luaTarget": "5.1",
        // No "self" in global functions
        "noImplicitSelf": true,
        // Will not put 'require' into compiled files
        "luaLibImport": "always",
        // Provides debug.traceback function
        "sourceMapTraceback": true,
        // Verbose mode
        "tstlVerbose": true
    }
}
